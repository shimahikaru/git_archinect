<article>
<%= link_to(notice_path(notice.id), class: 'list-content') do %>
<h5><%= notice.title %></h5>
<h6><%= notice.created_at.strftime('更新 ： %Y/%m/%d') %></h6>
<h6><%= notice.text.truncate(150) %></h6>
<div class="user">
  <h6><%= fa_icon("user") %>  <%= notice.user.name %></h6>
    <%if notice.user.office? %>
    <h6><%= fa_icon("paperclip") %>  <%= notice.user.office %></h6></div>
    <% end %>
<% end %>
</article>
