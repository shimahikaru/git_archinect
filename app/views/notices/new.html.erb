<%= stylesheet_link_tag    'product/new', media: 'all', 'data-turbolinks-track': 'reload' %>


<div class="product_new">

<div class="container">

<h3>お知らせを投稿</h3>
<p>（ ※は必須 ）</p>

<% if @notice.errors.any? %>
    <h3>入力した内容にエラーが<%= @notice.errors.count %>件あります</h3>
      <p><% @notice.errors.full_messages.each do |message| %>
        <%= message %>・
      <% end %>を入力してください。</p>
<% end %>
   <%= form_with model:  @notice, local: true  do |f| %>

     <div class="field charge">
      <p><%= f.label "お知らせ内容" %><a>※</a></p>
     <%= f.select :category, Notice.categories.keys, {prompt: '選んでください'}, class: 'form charge' %>
     </div>

     <div class="field">
      <p><%= f.label :タイトル %><a>※</a></p>
     <%= f.text_field :title, autofocus: true, autocomplete: "title", :maxlength => "20", placeholder: "タイトル(20文字以下)" , class: 'product form' %>
     </div>


     <div class="field">
     <p><%= f.label :"内容(５００文字まで)" %><a>※</a></p>
     <%= f.text_area :text, autofocus: true, autocomplete: "text", :maxlength => "500",  placeholder: "", class: ' form text' %>
     </div>



        <div class="field">
        <%= f.submit "この内容で保存", class: 'product button' %>
        </div>

    <% end %>

  </div>
</div>
