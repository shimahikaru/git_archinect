<%= stylesheet_link_tag    'product/new', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="product_new">
　<div class="container">

  <h3>建築事例を検索</h3>

<%= form_with url: search_products_path, method: :get, local: true do |f| %>

  <div class="field">
  <p><%= f.label :場所 %></p>
  <%= f.select :location, Product.locations.keys, {prompt: '選択してください'}, class: 'product form' %><br />
  </div>

  <div class="field">
  <p><%= f.label :カテゴリー %></p>
  <%= f.select :category, Product.categories.keys, {prompt: '選択してください'}, class: 'product form' %><br />
  </div>

  <div class="field">
  <p><%= f.label :関連キーワード %></p>
    <label><div class= "tag"><%= f.collection_check_boxes(:genre_id, Genre.all, :id, :tag) do |b| %>
      <%=  b.check_box %><%= b.label { b.text } %>
      <% end %></div>
     </label>
     </div>

  <div class="field">
  <p><%= f.label :表示の順番 %></p>
  <%= f.select :count, [["コメントが多い順", "1"], ["アクセス数が多い順", "2"]], {prompt: '選択してください'}, class: 'product form' %><br />
  </div>



  <div class="field">
  <%= f.submit "検索", class: 'product button', name: nil %>
  </div>

    <% end %>
　</div>
</div>

