<%= stylesheet_link_tag    'product/show', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<div class="product_page">

     <div class="container">
           <div class="proA">
                   <div class="swiper-container">

                           <% @photos.each do | img | %>
                           <%= image_tag img.photo_url(:thumb), :class => "swiper-slide" %>
                           <% end %>

                   </div>

<!--                    <div class="pagination">
                           <div class="swiper-pagination"></div>
                   </div> -->
           </div>

           <div class="proB">
                   <nav class="profile">
                    <ul>
                      <li><%= @product.title %></li>
                      <li><a><%= @product.subtitle %></a></li>
                      <li><a><%= @product.genre %></a></li>
                      <li><a><% @tags.each do | t | %>
                      <%= link_to t.genre.tag, search_products_path(key_word: t.genre_id) %>
                      <% end %></a></li>
                      <li><a><%= @product.completion %></a></li>
                      <li><a>場所：<%= @product.location %></a></li>
                      <li><a>面積：<%= @product.area %>㎡</a></li>
                      <li><a>工期<%= @product.whet %>ヶ月</a></li>
                      <li><a><%= @product.text %></a></li>
                    </ul>
                   </nav>
           </div>

                    <% if  @product.user_id == current_user.id %>
                    <div class="edituser" ><%= link_to "編集", edit_product_path(id: @product.id ) %></div>
                    <% end %>

     </div>

</div>
