
<article>
     <% @photos.each do | top | %>
        <% if product.id == top.product_id %>
        <%= link_to image_tag(top.photo_url), product_path(product.id), :class => "img" %>
        <% end %>
     <% end %>
    <div class="text">
        <div class="title"><h6><%= product.title %></h6></div>
        <p><%= fa_icon("map-marker") %><%= product.location %></p>
        <p><%= link_to product.category, search_products_path(category: product.category) %></p>
        <p><%= product.completion.strftime("%Y-%m") %>  <%= fa_icon("comments") %><%= product.comments.count %><%= fa_icon("eye") %><%= product.impressions.count %></p>
     </div>
</article>

