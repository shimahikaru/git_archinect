
<article>
     <% @photos.each do | top | %>
   <% if product.id == top.product_id %>
   <%= link_to image_tag(top.photo_url(:gallery)), product_path(product.id), :class => "img" %>
   <% end %>
        <% end %>

  <p><%= product.title %></p>
  <p><%= product.location %></p>
  <p><%= product.category %></p>
  <p><%= product.completion %></p>
</article>
