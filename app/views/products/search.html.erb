<%= stylesheet_link_tag    'products', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% if @products.length == 0 %>
     <div class="search_no">
        <% if user_signed_in? %>
        <p class="product_search">まだ投稿されていません。<br >是非１番に投稿しましょう。</p>
            <%= link_to(new_product_path, :class=>"buttonA" ) do %>投稿する<% end %>
        <% else %>
        <p class="product_search">まだ投稿されていません。<br >ログインまたは登録して是非１番に投稿しましょう。</p>
            <%= link_to(new_user_registration_path, :class=>"buttonA" ) do %>無料で会員登録<% end %><br >
            <%= link_to(new_user_session_path, :class=>"buttonA buttonB" ) do %>ログイン<% end %>
        <% end %>
      </div>
    <% end %>

<div class="index-container">
<%= render partial: 'products/product', collection: @products %>
</div>
<div class="paginate">
<%= paginate @products %>
</div>
