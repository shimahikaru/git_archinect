<%= stylesheet_link_tag    'user/new', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<div class="user_new">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
      <div class="field_with_errors"></div>
    <%= f.text_field :familyname, autofocus: true, autocomplete: "familyname", :maxlength => "10", placeholder: "氏名または会社名" , class: 'user form' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "登録メールアドレス", class: 'user form' %>
  </div>


  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",  placeholder: "パスワード(６文字以上)", class: 'user form' %>
  </div>

  <div class="field">
    <%= f.submit "今すぐ会員登録", class: 'user button', data:{confirm: '仮登録メールを確認後、登録となります。'} %>
  </div>
   <%= link_to "登録済みの方はコチラ", new_user_session_path, :class=>'btn' %>
<% end %>
</div>


<script>
$(".user.button").on('click', function(){
  if ($('#user_familyname').val() == '') {
    alert('氏名または会社名を入力してください');
    return false;
  }
  if ($('#user_email').val() == '') {
    alert('メールアドレスを入力してください');
    return false;
  }
  if ($('#user_password').val() == '') {
    alert('パスワードを入力してください');
    return false;
  }
});
</script>
