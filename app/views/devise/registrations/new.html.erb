<%= stylesheet_link_tag    'devise/user', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<% provide :title, "新規登録 | " %>
<div class="usernew">
<h2>アカウント登録</h2>
<p>（ ※は必須です。）</p>

<% if @user.errors.any? %>
    <h3>入力内容にエラーがあります</h3>
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
      <div class="field_with_errors"><p><%= f.label :"氏名または会社名" %><a>※</a></p></div>
    <%= f.text_field :familyname, autofocus: true, autocomplete: "familyname", :maxlength => "10", placeholder: "(例)ヤマダ" , class: 'user form' %>
  </div>

  <div class="field">
    <p><%= f.label :"登録メールアドレス" %><a>※</a></p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "(例)archinectjapan@mail.com", class: 'user form' %>
  </div>

  <div class="field">
    <p><%= f.label :"パスワード" %><a>※</a></p>
    <%= f.password_field :password, autocomplete: "new-password",  placeholder: "６文字以上", class: 'user form' %>
  </div>



  <div class="field">
    <%= f.submit "仮登録メールを送信", class: 'user button' %>
    <p><%= f.label :"メールを確認後、登録となります。" %></p>
  </div>
<% end %>
  <div class="field">
<%= render "devise/shared/links" %>
  </div>
</div>
<script>
$(".user.button").on('click', function(){
  if ($('#user_familyname').val() == '') {
    alert('氏名または会社名を入力してください');
    return false;
  }
  if ($('#user_email').val() == '') {
    alert('メールアドレスを入力してください');
    return false;
  }
  if ($('#user_password').val() == '') {
    alert('パスワードを入力してください');
    return false;
  }
});
</script>
