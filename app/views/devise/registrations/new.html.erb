<h2>アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="field">
    <%= f.text_field :familyname, autofocus: true, autocomplete: "familyname",  placeholder: "苗字" %>
     <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname",  placeholder: "名前" %>
    </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "メールアドレス" %>
  </div>

    <div class="field">
    <%= f.text_field :office, autofocus: true, autocomplete: "office",  placeholder: "所属している会社・事務所名" %>
    </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",  placeholder: "パスワード(６文字以上)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "パスワード(再入力)"  %>
  </div>

  <div class="actions">
    <%= f.submit "アカウントを作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
