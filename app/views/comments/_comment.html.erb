<article>
<%= simple_format(comment.text) %>
<div class="title">
<h5><%= link_to comment.user.name, user_path(comment.user) %></h5>
<p><%= comment.created_at.strftime('%Y-%m-%d %H:%M') %></p></div>
<% if user_signed_in? && current_user.id == comment.user_id %>
<p><%= link_to '削除', "/comments/#{comment.id}", method: :delete, data:{confirm: '削除しますか？'} %></p>
<% end %>
</article>
