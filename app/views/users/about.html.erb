<%= stylesheet_link_tag    'devise/user', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="usernew">

<h2>ユーザー検索</h2>

<%= form_with url: search_users_path, method: :get, local: true do |f| %>

     <div class="field">
     <p><%= f.label :主な勤務地 %></p>
     <%= f.select :location, User.locations.keys,{prompt: '選択してください'},  class: 'localform' %><br />
     </div>

     <div class="field">
     <p><%= f.label :仕事内容 %></p>
     <label><%= f.collection_check_boxes(:work_id, Work.all, :id, :tag) do |b| %>
      <%= b.label { b.check_box + b.text } %>
     </label>
     <% end %>
     </div>

  <div class="field">
  <p><%= f.label :表示の順番 %></p>
  <%= f.select :count, [["投稿が多い順", "1"], ["フォロワーが多い順", "2"]], {prompt: '選択してください'}, class: 'user form' %><br />
  </div>


     <div class="field">
     <%= f.submit "検索", class: ' user button', name: nil %>
     </div>
     <% end %>

</div>

