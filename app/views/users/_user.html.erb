<article>
  <div class="contentA">

    <div class="imgA">
    <%= image_tag user.avatar_url(:gallery), :class => "img" %>
    </div>

    <div class="conA">

      <div class="con1">
      <h5><%= link_to user.name, user_path(user.id) %></h5>
      <p><%= fa_icon("edit") %>
        <% if user.products.exists?%>
        <%= link_to "#{user.products.count}件", search_products_path(user_id: user.id) %>
        <% else %>
          0件
        <% end %>
        </p>
      </div>

      <div class="con2">
      <p>
      <% user.works.each do |work|%>
      <%= link_to work.tag, search_users_path(work_id: work.id) %>
      <% end %></p>
      </div>

    </div>

  </div>

  <div class="contentB">
    <% if user.text? %>
    <p><%= user.text.truncate(50) %></p>
    <% end %>
  </div>
</article>

