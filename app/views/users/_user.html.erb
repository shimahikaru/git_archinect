<article>
  <div class="contentA">

    <div class="imgA">
    <%= image_tag user.avatar_url(:gallery), :class => "img" %>
    </div>

    <div class="conA">

      <div class="con1">
      <h5><%= link_to user.name, user_path(user.id) %></h5>
        <% if user.products.exists?%>
        <p><%= fa_icon("edit") %><%= link_to "#{user.products.count}ä»¶", search_products_path(user_id: user.id) %></p>
        <% end %>
      </div>
      <div class="con3">
      <p><%= fa_icon("map-marker") %>  <%= user.location %></p>
      </div>
      <div class="con2">
      <% if user.works && user.works.count >= 4 %>
      <div class="tagA">
        <% user.works.each_with_index do |work, i|%>
        <p><%= link_to work.tag, search_users_path(work_id: work.id) %></p>
        <% break if i== 3 %>
        <% end %>...</div>
      <% elsif user.works %>
      <div class="tagA">
        <% user.works.each do |work|%>
        <p><%= link_to work.tag, search_users_path(work_id: work.id) %></p>
        <% end %></div>
      <% else %>
      <% end %>
      </div>

    </div>

  </div>


</article>

