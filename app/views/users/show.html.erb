
<%= stylesheet_link_tag    'user/products', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="user_page">


   <div class="container">
    <div class="userA">
     <% if @user.avatar? %>
      <%= image_tag @user.avatar.url(:thumb), :class => "image" %>
     <% else %>
     <div class="image"></div>
     <% end %>
    <nav class="profile">
      <ul>
        <li><h4><%= @user.name %></h4></li>
        <li><a><%= @user.office %></a></li>
        <li><% @tags.each do | t | %>
        <p><%= link_to t.work.tag, search_users_path(key_word: t.work_id) %></p>
        <% end %></li>
        <% if @user.local? %>
        <li><a><%= fa_icon("map-pin") %></a><a><%= @user.location + @user.local%></a></li>
        <% else %>
        <li><a><%= fa_icon("map-marker") %></a><a><%= @user.location %></a></li>
        <% end %>
        <% if @user.url? %>
        <li><a><%= fa_icon("link") %></a><a><%= @user.url %></a></li>
        <% end %>
        <% if @user.address? %>
        <li><a><%= fa_icon("envelope") %></a><a><%= mail_to @user.address, 'メール' %></a></li>
        <% end %>
        <% if @user.phone? %>
        <li><a><%= fa_icon("phone") %></a><a><%= @user.phone %></a></li>
        <% end %>
      </ul>
      <text><%= simple_format(@user.text) %></text>
        <%= render partial: 'relationships/follow_button', user: @user %>
    <div class="follow">
      <%= link_to "フォロー", followings_user_path(@user) %>
      <%= link_to "フォロワー", followers_user_path(@user) %>
    </div>
        <% if user_signed_in? && @user.id == current_user.id %>
        <div class ="edituser post"><%= link_to "プロジェクトを投稿", new_product_path %></div>

        <div class="edituser" ><%= link_to "編集", edit_user_path(current_user) %></div>
        <% end %>
    </nav>

   </div>

   <% if @user.products.exists? %>
   <div class="userB">
   <p>プロジェクト：（<%= @user.products.count %>）</p>
     <div class=" swiper-container">
       <div class="swiper-wrapper">
         <div class="index-container">
         <%= render partial: 'users/product', collection: @products %>
         </div>
       </div>
     </div>
   <button class="btn"><%= link_to "プロジェクトをもっと見る", search_products_path(user_id: @user.id) %><a><%= fa_icon("angle-double-right icon") %></a></button>
   </div>

   <% else %>
   <a>まだ投稿がありません。</a>
   <% end %>

   <% if @user.commented_products.exists? %>
   <div class="userB">
    <p>コメント済み</p>
         <div class=" swiper-container">
       <div class="swiper-wrapper">
    <div class="index-container">
   <%= render partial: 'users/product', collection: @user.commented_products.distinct %>
   </div>
     </div>
     </div>
   <button class="btn"><%= link_to "コメント済みをもっと見る", search_comments_path(id: @user.id) %><a><%= fa_icon("angle-double-right icon") %></a></button>
   </div>
   <% end %>


  </div>
</div>

 <script>
var swiper = new Swiper('.swiper-container', {
  draggable: true,
  infinite: true,
  pagination: '.swiper-pagination',
  paginationClickable: true,
  parallax: true,
  speed: 600,
  loop: true,
  speed: 200,
  slidesPerView: 2,
    navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
