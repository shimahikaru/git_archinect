<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<div class="user_page">


   <div class="container">


      <div class="userA">
     <%= image_tag @user.avatar.url, :class => "image" %>

           <nav class="profile">
                 <ul>
                 <li><h4><%= @user.name %></h4></li>
                 <li><a><%= @user.office %></a></li>
                 <li><% @works.each do |work| %>
                   <p><a><%= work %></a></p>
                   <% end %></li>
                 <li><a><%= fa_icon("map-pin") %></a><a><%= @user.location + @user.local %></a></li>
                 <li><a><%= fa_icon("link") %></a><a><%= @user.url %></a></li>
                 <li><a><%= fa_icon("envelope") %></a><a><%= @user.address %></a></li>
                 <li><a><%= fa_icon("phone") %></a><a><%= @user.phone %></a></li>
                 </ul>
                 <text><%= simple_format(@user.text) %></text>
             <% if user_signed_in? && current_user %>
             <div class="edituser" ><%= link_to "プロフィール編集", edit_user_path(current_user) %></div>
             <% end %>
           </nav>

   </div>


  </div>


</div>
