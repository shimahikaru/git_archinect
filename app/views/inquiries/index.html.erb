<%= stylesheet_link_tag    'devise/user', media: 'all', 'data-turbolinks-track': 'reload' %>

<%= form_with model: @inquiry, :url => inquiries_confirm_path, local: true do |f| %>
  <div class="usernew">
    <h3>お問い合わせ</h3>
    <p>（ ※は必須です。 ）</p>

  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <p><%= msg %></p>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
  <p><%= f.label :"名前" %><a>※</a></p>
  <%= f.text_field :name, class: 'user form' %>
  </div>

  <div class="field">
  <p><%= f.label :"メールアドレス" %><a>※</a></p>
  <%= f.email_field :email, class: 'user form' %>
  </div>

  <div class="field">
  <p><%= f.label :"お問い合わせ内容" %><a>※</a></p>
  <%= f.text_area :message, class: 'user form text' %>
  </div>

  <div class="field">
  <%= f.submit '確認',class: 'user button' %>
  </div>
  <% end %>
  </div>
